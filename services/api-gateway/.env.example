# Environment variables for API Gateway
NODE_ENV=development
PORT=8080

# JWT Configuration
JWT_SECRET=fintech-platform-secret-key
JWT_EXPIRES_IN=24h

# Redis Configuration
REDIS_URL=redis://redis:6379

# Service URLs (internal Docker network)
CUSTOMER_SERVICE_URL=http://customer-service:8080
RISK_SERVICE_URL=http://risk-service:8080
PAYMENT_SERVICE_URL=http://payment-service:8080
ML_SERVICE_URL=http://ml-service:8080
FEATURE_STORE_URL=http://feature-store:8080

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100